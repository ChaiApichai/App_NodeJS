extends layout

block content

    .container
        h2 Search User
        hr
        .row
            .col-12
                form(action='/users/search' method="post")
                    .row
                        .form-group.col-6
                            label(for="") firstname
                            input(type="text" name="firstname" class="form-control" placeholder="ชื่อจริง" )
                        .form-group.col-6
                            label(for="") lastname
                            input(type="text" name="lastname" class="form-control" placeholder="นามสกุล" )
                    .row    
                        .form-group.col-6
                            label(for="") email
                            input(type="text" name="email" class="form-control" placeholder="เมล" )
                        .form-group.col-6
                            label(for="") age
                            input(type="text" name="age" class="form-control" placeholder="อายุ")
                    .row
                        .form-group.col-12
                            label(for="") Status
                            select(name="status" class="form-control")
                                option(value="" ) select
                                option(value="active" ) active
                                option(value="pending" ) pending

                    .row
                        .form-group.col-6
                            button(type="submit").btn.btn-block.btn-info Search


    .container
        h2= (user ? 'Edit User':'Add User')
        hr
        .row
            .col-12
                form(action=(user ? "/users/edit/" + user._id : '/users/add'), method="post")
                    .row
                        .form-group.col-6
                            label(for="") firstname
                            input(type="text" name="firstname" class="form-control" placeholder="ชื่อจริง" value=(user ? user.firstname:''))
                        .form-group.col-6
                            label(for="") lastname
                            input(type="text" name="lastname" class="form-control" placeholder="นามสกุล" value=(user ? user.lastname:''))
                    .row    
                        .form-group.col-6
                            label(for="") email
                            input(type="text" name="email" class="form-control" placeholder="เมล" value=(user ? user.email:''))
                        .form-group.col-6
                            label(for="") age
                            input(type="text" name="age" class="form-control" placeholder="อายุ" value=(user ? user.age:''))
                    .row
                        .form-group.col-12
                            label(for="") Status
                            select(name="status" class="form-control")
                                option(value="active" selected=(user && user.status == 'active')) active
                                option(value="pending" selected=(user && user.status == 'pending')) pending

                    .row
                        .form-group.col-6
                            button(type="submit").btn.btn-block.btn-success= (user ? 'Edit':'Add')
                        .form-group.col-6
                            button(type="reset").btn.btn-block.btn-warning Reset


    if users
        .container
            h2 Users
            hr
            .row
                each user in users
                    .col-6.col-md-4
                        h3.text-primary= user.firstname + ' ' + user.lastname
                        p= 'Age | ' + user.age
                        p= 'email | ' + user.email
                        p(class=(user.status == 'active' ? 'text-success':'text-danger'))= 'status | ' + user.status
                        
                        div
                            ul.list-inline
                                li.list-inline-item
                                    a(href="/users/edit/" + user._id).btn.btn-info Edit
                                li.list-inline-item
                                    form(action="/users/delete/" + user._id, method="post")
                                        button(type="submit").btn.btn-danger Del

                        hr




